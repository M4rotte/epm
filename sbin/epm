# /sbin/epm

EPM_SELF=$0
EPM_CONF=$1
EPM_RUN_COUNTER=0

show_help() {
    1>&2 cat <<EOHELP

Entrypoint Manager

Usage: $0 <configuration file>

EOHELP
}

graceful_exit() { echo "EPM exitingâ€¦ Bye!"; exit 0; }
restart() { exec "$EPM_SELF" "$EPM_CONF"; }
trap graceful_exit 2 15
trap restart 1

# exit 1 if no configuration file is specified.
[ -f "$1" ] || { show_help; exit 1; } 

# source the configuration file
. "$1"
# source the library file
. "${EPM_LIB}" "$1"

# run forever
while true; do run; done





